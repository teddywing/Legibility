{
	"manifest_version": 2,
	"name": "Legibility",
	"description": "Apply custom CSS to web pages.",
	"version": "0.0.1",

	"applications": {
		"gecko": {
			"id": "com.teddywing@legibility"
		}
	},

	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"webNavigation",
		"http://*/*",
		"https://*/*"
	],

	"commands": {
		"reload": {
			"suggested_key": {
				"default": "Ctrl+Alt+L",
				"mac": "MacCtrl+Alt+L"
			},

			"description": "Reload the extension"
		}
	}
}
