{
	"manifest_version": 2,
	"name": "Legibility",
	"description": "Apply custom CSS to web pages.",
	"version": "0.0.1",

	"applications": {
		"gecko": {
			"id": "com.teddywing@legibility"
		}
	},

	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": ["content.js"]
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"activeTab",
		"http://*/*",
		"https://*/*"
	]
}
